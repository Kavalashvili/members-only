extends layout 

block content 
    form(method='POST' action='/users/log-in-form')
        .form-group 
            label(for='username') Username (e-mail):
            input#username.form-control(type='text', placeholder='E-mail...', name='username', required='true')
        .form-group 
            label(for='password') Password: 
            input#password.form-control(type='password', placeholder='Password...', name='password', required='true')
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg