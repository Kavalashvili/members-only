extends layout 

block content 
    form(method='POST' action='/users/sign-up-form')
        .form-group 
            label(for='first_name') First name: 
            br
            input#first-name.form-control(type='text', placeholder='First name...', name='first_name', required='true')
        .form-group 
            label(for='last_name') Last name: 
            br
            input#last-name.form-control(type='text', placeholder='Last name...', name='last_name', required='true')
        .form-group 
            label(for='username') Username (e-mail):
            br
            input#username.form-control(type='text', placeholder='E-mail...', name='username', required='true')
        .form-group 
            label(for='password') Password: 
            br
            input#password.form-control(type='password', placeholder='Password...', name='password', required='true')
        button.btn.btn-primary.button-68(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg